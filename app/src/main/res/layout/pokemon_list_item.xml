<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="pokemon"
			type="c.local.com.example.data.Pokemon" />

		<variable
			name="callback"
			type="c.local.com.example.ui.PokemonClickCallback" />
	</data>


	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/product_item_min_height"
		android:onClick="@{() ->  callback.onClick(pokemon)}"
		android:orientation="horizontal"
		android:layout_marginStart="@dimen/item_horizontal_margin"
		android:layout_marginEnd="@dimen/item_horizontal_margin"
		app:cardUseCompatPadding="true">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_marginVertical="10dp"
			android:layout_marginHorizontal="10dp"
			android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:layout_marginEnd="10dp"
				tools:src="@mipmap/ic_launcher" />

			<TextView
				android:id="@+id/id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@{pokemon.id}"
				tools:text="25" />

			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@string/cd_product_name"
				android:text="@{pokemon.name}"
				tools:text="Pikachu" />


		</LinearLayout>

	</androidx.cardview.widget.CardView>
</layout>
